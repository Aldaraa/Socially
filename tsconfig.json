{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "isolatedModules": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true
  },
  "filesGlob": [
    "!**/*.test.ts",
    "client/**/*.ts",
    "server/**/*.ts",
    "typings/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
